.row
  .col
    = bootstrap_form_for(@designer) do |f|
      - if @designer.errors.any?
        #error_explanation
          %h2= "#{pluralize(@designer.errors.count, "error")} prohibited this designer from being saved:"
          %ul
            - @designer.errors.full_messages.each do |message|
              %li= message

      .row
        .col
          = f.text_field :name
          = f.submit 'Save'

